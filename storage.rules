rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Fetch user's role from Firestore
    function getRole() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }

    match /restaurants/{resId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && (getRole() == 'admin' || getRole() == 'super_admin');
    }

    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || getRole() == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
